{
    "manifest_version": 3,
    "name": "Pocket Drive",
    "version": "1.0.0",
    "icons": {
        "48": "images/krabs.png"
    },
    "action": {
        "default_icon": {},
        "default_title": "Pocket Drive - save images to google drive"
    },
    "sidebar_action": {
        "default_icon": {
            "48": "images/krabs.png"
        },
        "default_panel": "scripts/sidepanel/sidepanel.html",
        "open_at_install": false
    },
    "content_scripts": [
        {
            "js": ["scripts/content/sleeper.js"],
            "matches": ["https://*/*"]
        }
    ],
    "background": {
        "scripts": ["scripts/worker/sw.js"],
        "type": "module"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "identity",
        "scripting",
        "storage",
        "tabs",
        "unlimitedStorage"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+B",
                "mac": "Command+B"
            }
        }
    },
    "web_accessible_resources": [
        {
            "resources": ["images/*", "assets/*", "scripts/content/*"],
            "matches": ["https://*/*"]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "pocketdrive@ext",
            "strict_min_version": "42.0"
        }
    }
}
