{
    "manifest_version": 3,
    "name": "Krabs",
    "version": "1.0.0",
    "action": {
        "default_icon": {},
        "default_title": "Krabs - Be eaten by me"
    },
    "icons": {
        "48": "images/krab.png"
    },
    "content_scripts": [
        {
            "js": ["scripts/content.js"],
            "matches": ["https://*/*"]
        }
    ],
    "background": {
        "service_worker": "sw.js"
    },
    "permissions": ["activeTab", "scripting", "contextMenus", "storage"],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+B",
                "mac": "Command+B"
            }
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "images/*",
                "popup/popup.html",
                "scripts/content.css"
            ],
            "matches": ["https://*/*"]
        }
    ]
}
